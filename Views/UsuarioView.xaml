<Window x:Class="DibujoTCP.Views.UsuarioView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DibujoTCP.Views"
        xmlns:vm="clr-namespace:DibujoTCP.ViewModels"
        mc:Ignorable="d"
        Title="UsuarioView" Height="450" Width="800">
    <Window.DataContext>
        <vm:DrawViewModel></vm:DrawViewModel>
    </Window.DataContext>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
    <Canvas Name="MyCanvas" Height="300">
        
    </Canvas>
    <StackPanel Grid.Row="1" Height="20" VerticalAlignment="Bottom">
            <Button Command="{Binding AgregarRectanguloCommand}">dibujar</Button>
    </StackPanel>
    </Grid>
</Window>
